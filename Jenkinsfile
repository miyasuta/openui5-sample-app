pipeline {
    agent { 
        dockerfile {
            args '--security-opt seccomp=./seccomp/chromium.json -v `pwd`/node-ci-demo:/app'
        }    
    }
    stages {
        stage('prepare') {
            steps {
                sh 'npm config set @sap:registry https://npm.sap.com'
                sh 'npm install'
            }
        }
        stage('test') {
            steps {
                sh 'npm run-script test'
            }
        }        
        stage('build') {
            steps {

                sh 'npm run-script build'
            }
        }
    }
}